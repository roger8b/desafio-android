<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/view"
            android:background="@color/colorAccent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/glUserDataBotton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:visibility="visible"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glUserDataTop"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.03"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glUserDataBotton"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"/>

    <androidx.constraintlayout.widget.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/glBotton"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.95"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_exit"
            android:tint="@color/lightIcon"
            android:id="@+id/ivExit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:background="@drawable/background_light_ripple"
            android:padding="8dp"
            android:clickable="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glUserDataTop"/>

    <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logo_github"
            android:id="@+id/ivLogin"
            app:layout_constraintStart_toStartOf="@+id/tvUserName"
            app:layout_constraintTop_toBottomOf="@+id/tvUserName"
            app:layout_constraintBottom_toTopOf="@id/ivCode"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_chainStyle="spread"
            android:tint="@color/lightIcon"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_code"
            android:id="@+id/ivCode"
            app:layout_constraintStart_toStartOf="@+id/ivLogin"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/ivLogin"
            app:layout_constraintBottom_toTopOf="@id/glUserDataBotton"
            android:tint="@color/lightIcon"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvLogin"
            tools:text="roger8b"
            app:layout_constraintTop_toTopOf="@+id/ivLogin"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogin"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/ivLogin"
            android:textColor="@color/lightText"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPublicRepository"
            tools:text="Repositorios: 100"
            app:layout_constraintTop_toTopOf="@+id/ivCode"
            app:layout_constraintBottom_toBottomOf="@+id/ivCode"
            app:layout_constraintStart_toEndOf="@+id/ivCode"
            android:layout_marginStart="8dp"
            android:textColor="@color/lightText"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserName"
            tools:text="Roger Martins da Silva"
            android:textSize="24sp"
            android:textColor="@color/lightText"
            app:layout_constraintStart_toStartOf="@+id/ivUserImage"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ivUserImage"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRepositories"
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:listitem="@layout/item_repository"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/glUserDataBotton"
            />

    <ProgressBar
            android:id="@+id/pbLoad"
            style="?android:progressBarStyleHorizontal"
            android:indeterminate="true"
            android:visibility="gone"
            tools:visibility="visible"
            android:indeterminateTint="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:srcCompat="@drawable/logo_github"
            android:id="@+id/ivUserImage"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/glUserDataTop"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>