<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/constraintLayout"
                                                   android:paddingStart="16dp"
                                                   android:paddingEnd="16dp"
                                                   android:paddingBottom="3dp"
                                                   android:paddingTop="3dp"
                                                   android:background="@android:color/transparent">

    <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:cardCornerRadius="6dp"
            android:id="@+id/cardView"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="3dp"
            app:contentPadding="3dp"
            app:cardUseCompatPadding="true">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent">

            <TextView
                    android:text="Desafio Android"
                    android:layout_width="331dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRepoName"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="18sp"
                    android:textColor="@color/darkText"
                    tools:layout_editor_absoluteY="8dp"
                    tools:layout_editor_absoluteX="16dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_file"
                    android:id="@+id/ivLanguage"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRepoDescription"
                    android:layout_marginBottom="8dp"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLanguage"
                    tools:text="Kotlin"
                    app:layout_constraintTop_toTopOf="@+id/ivLanguage"
                    app:layout_constraintBottom_toBottomOf="@+id/ivLanguage"
                    app:layout_constraintStart_toEndOf="@+id/ivLanguage"
                    android:layout_marginStart="8dp"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_code_fork"
                    android:id="@+id/ivFork"
                    app:layout_constraintEnd_toStartOf="@+id/tvForkCount"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/ivLanguage"
                    app:layout_constraintBottom_toBottomOf="@+id/ivLanguage"/>

            <TextView
                    android:text="50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvForkCount"
                    app:layout_constraintTop_toTopOf="@+id/ivFork"
                    app:layout_constraintBottom_toBottomOf="@+id/ivFork"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="16dp"
                    />

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_star"
                    android:id="@+id/ivStars"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toTopOf="@+id/ivLanguage"
                    app:layout_constraintBottom_toBottomOf="@+id/ivLanguage"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvStars"
                    app:layout_constraintTop_toTopOf="@id/ivStars"
                    app:layout_constraintBottom_toBottomOf="@id/ivStars"

                    tools:text="100"
                    app:layout_constraintStart_toEndOf="@+id/ivStars"
                    android:layout_marginStart="8dp"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvRepoDescription"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvRepoName"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>